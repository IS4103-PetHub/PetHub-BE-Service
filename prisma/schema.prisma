generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Entities
model User {
  userId       Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  accountStatus AccountStatus @default(ACTIVE)
  dateCreated  DateTime @default(now())
  lastUpdated  DateTime @default(now())

  applicationAdmin ApplicationAdmin?
  petOwner         PetOwner?
  petBusiness    PetBusiness?
}


model ApplicationAdmin {
  adminId           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  adminRole AdminRole   
  lastUpdated  DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [userId])
  userId       Int @unique
}


model PetOwner {
  petOwnerId           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  contactNumber  String
  dateOfBirth  DateTime
  lastUpdated  DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [userId])
  userId       Int @unique
}

model PetBusiness {
  petBusinessId                  Int      @id @default(autoincrement())
  companyName         String
  uen                 String?
  businessType BusinessType?
  businessDescription String?
  contactNumber String
  websiteURL String?
  lastUpdated  DateTime @default(now())
  // logo                String // TODO: figure out best way to save logos

  user                User     @relation(fields: [userId], references: [userId])
  userId              Int @unique
}


// enums
enum AccountStatus {
  ACTIVE
  INACTIVE
}

enum AdminRole {
  MANAGER
  ADMINISTRATOR
}

enum BusinessType {
  FNB
  SERVICE
  HEALTHCARE
}
